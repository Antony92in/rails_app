<% if user_signed_in? %>

<%= current_user.email %>
	
<% if current_user.avatar.attached? %>

<%= image_tag(current_user.avatar, size: "300x300") %>

<% end %>




<br>


<%= form_with(model: @post, url: posts_path, local: true ) do |f| %>
   <%= f.label 'title'%>
  <%= f.text_field (:title) %>
  <br>
  <%= f.label 'text'%>
  <%= f.text_field (:content)%>
  <br>
  <%= f.label 'add photo'%>
  <%= f.file_field (:pic) %>
  <br>
  <%= f.submit "Add post" %>
<%end%>


<% end %>
<hr>
<% @posts.each do |post| %>

<%= post.title %> <br>

<% if post.pic.attached? %>

<%= image_tag(post.pic, size: "500x300") %>

<% end %>

<hr>
<% end %>