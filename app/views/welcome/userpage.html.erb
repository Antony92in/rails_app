<% if user_signed_in? %>

<%= current_user.email %>
	
<% if current_user.avatar.attached? %>

<%= image_tag(current_user.avatar, size: "300x300") %>

<% end %>

<div>
<h4>Users i follow</h4>
</div>

<% @followers.each do |f| %>
  <%= f.email %>
  <%= link_to 'user', "user/#{f.id}" %>
  <%= link_to 'unfollow', "/unfollow/#{f.id}", method: :delete %>
    <br>
<% end %>
<hr>


<%= form_with(model: @post, url: posts_path, local: true ) do |f| %>
   <%= f.label 'title'%>
  <%= f.text_field (:title) %>
  <br>
  <%= f.label 'text'%>
  <%= f.text_field (:content)%>
  <br>
  <%= f.label 'add photo'%>
  <%= f.file_field (:pic) %>
  <br>
  <%= f.submit "Add post" %>
<%end%>


<% end %>
<hr>
<% @posts.each do |post| %>

<%= post.title %> <br>

  <% if post.pic.attached? %>
    <%= image_tag(post.pic, size: "500x300") %>
  <% end %>
<br>
<% comments = post.comments %>
  <% comments.each do |c| %>
    <%= c.author %>:
    <%= c.comment %>
    <br>
  <% end %>
<hr>
<% end %>