<div style="text-align: center;">
<%= link_to 'Main page', '/', class: "btn btn-outline-primary" %>
</div>
<br>
<hr>
<% @users.each do |user| %>
  <% if user.avatar.attached? %>
    <%= image_tag(user.avatar, size: "100x100") %>
    <% else %>
    <%= image_tag "img.jpg", size: "100x100" %>
  <% end %>
    <%= link_to "#{user.email}" , "user/#{user.id}", class: "btn btn-outline-info" %>
    <br>
    
    
    <% if user.followers.include?(current_user) %>
      <%= link_to 'Unfollow', "unfollow/#{user.id}", method: :delete, class: "btn btn-sm btn-outline-danger" %>
      <% else %>
      <%= link_to 'follow', "follow/#{user.id}", class: "btn btn-sm btn-outline-primary" %>
    <% end %>
    


    <hr>
<% end %>
